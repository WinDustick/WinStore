# =====================================
# GENERAL SETTINGS
# =====================================
# Django settings
SECRET_KEY=your_secret_key_here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# =====================================
# DATABASE SWITCH
# =====================================
# Use 'mssql' or 'oracle'
DB_TYPE=mssql

# =====================================
# MS SQL DATABASE SETTINGS
# =====================================
MSSQL_PASSWORD=your_strong_mssql_password

# =====================================
# ORACLE DATABASE SETTINGS
# =====================================
# This is the password for the SYS user of the Oracle container
ORACLE_PASSWORD=your_strong_oracle_password
# This is the password for the WINSTORE_ADMIN user created by the deploy script
ORACLE_ADMIN_PASSWORD=123

# =====================================
# DIRECTUS SETTINGS
# =====================================
DIRECTUS_KEY=your_directus_key_here
DIRECTUS_SECRET=your_directus_secret_here
DIRECTUS_ADMIN_EMAIL=admin@example.com
DIRECTUS_ADMIN_PASSWORD=your_admin_password_here
DIRECTUS_PUBLIC_URL=http://localhost:8055

# --- Directus DB Connection ---
# Uncomment the block corresponding to the DB_TYPE you chose above

